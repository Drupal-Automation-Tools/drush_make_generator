# Various rewrite rules.
<IfModule mod_rewrite.c>
  RewriteEngine on

  # Rewrite URLs of the form '/a/XXX' to the form 'file.php?alias=XXX'.
#  RewriteCond %{REQUEST_FILENAME} !-f
#  RewriteCond %{REQUEST_FILENAME} !-d
#  RewriteCond %{REQUEST_URI} !=/favicon.ico
  RewriteRule ^a/([^/]*)/raw$ index.php [L]
  RewriteRule ^a/([^/]*)$ index.php [L]
  RewriteRule ^file.php index.php [L]

  RewriteCond %{HTTP_HOST} ^sudo\..*
  RewriteRule ^a-sandwich$ http://xkcd.com/149/ [L,R=301]

  RewriteRule ^a-sandwich$ index.php [L]
</IfModule>
